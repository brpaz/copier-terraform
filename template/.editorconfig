root = true
end_of_line = lf
charset = utf-8

# Terraform files
[*.{tf,tfvars}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*{.yml,.yaml}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = true
insert_final_newline = true

[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf

